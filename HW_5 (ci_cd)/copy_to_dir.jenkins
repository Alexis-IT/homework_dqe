pipeline {
    agent any

    environment {
        SOURCE_BRANCH = 'development'
        DESTINATION_FOLDER = '/dir_for_qa'
    }

    stages {
        stage('Copy Code') {
            steps {
                script {
                    sh "mkdir -p $DESTINATION_FOLDER"
                    sh "cp -r * $DESTINATION_FOLDER"
                }
            }
        }
    }
}