pipeline {
    agent any
    stages {
        stage('Check QA Branch') {
            steps {
                script {
                        def qaBranchExists = sh(script: 'git show-ref --verify --quiet refs/heads/qa', returnStatus: true)
                        if (!qaBranchExists) {
                            sh 'git branch --list'
                            echo 'Створення гілки qa...'
                            sh 'git checkout -b qa'
                            sh 'git push origin qa'
                            sh 'git status'
                        } else {
                            echo 'Гілка qa вже існує.'
                        }
                    }
                }
        }
         stage('Merge Changes 1') {
            steps {
                script {
                    sh 'git checkout qa'
                    sh 'git merge development'
                }
            }
        }
        stage('Merge Changes 2') {
            steps {
                script {
                    sh 'git push origin qa'
                    sh 'git log --oneline -n 5'
                }
            }
        }
    }
}
